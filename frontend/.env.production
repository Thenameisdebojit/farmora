# Smart Crop Advisory Production Environment Configuration

# Application Settings
VITE_APP_NAME="Smart Crop Advisory"
VITE_APP_VERSION="1.0.0"
VITE_NODE_ENV="production"

# API Configuration
VITE_API_URL="http://localhost:5000/api"
VITE_WS_URL="ws://localhost:5000"
VITE_API_TIMEOUT=10000

# Google OAuth Configuration  
VITE_GOOGLE_CLIENT_ID="671265325896-m6d6v4b5r8jn7qqg0jr7v1pe3dcfrr4j.apps.googleusercontent.com"

# Authentication Features
VITE_ENABLE_PHONE_AUTH="true"
VITE_ENABLE_GOOGLE_AUTH="true"
VITE_ENABLE_REGISTRATION="true"

# Weather Service Configuration
# Get your API key from: https://openweathermap.org/api
VITE_WEATHER_API_KEY="your_openweathermap_api_key_here"
VITE_WEATHER_API_URL="https://api.openweathermap.org/data/2.5"

# Market Data Configuration
# You can integrate with various commodity price APIs
VITE_MARKET_API_URL="https://api.marketdata.com"
VITE_MARKET_API_KEY="your_market_api_key_here"

# IoT Configuration
VITE_IOT_API_URL="https://iot.smartcropadvisory.com"
VITE_IOT_WS_URL="wss://iot.smartcropadvisory.com"

# Third-party Integrations
# Google Maps for location services
VITE_GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"

# Firebase (for push notifications)
VITE_FIREBASE_API_KEY="your_firebase_api_key_here"
VITE_FIREBASE_PROJECT_ID="your_firebase_project_id"

# AI/ML Services
# For crop health analysis and predictions
VITE_AI_API_URL="https://ai.smartcropadvisory.com"
VITE_AI_API_KEY="your_ai_api_key_here"

# Analytics and Monitoring
VITE_ANALYTICS_ID="your_analytics_id_here"
VITE_SENTRY_DSN="your_sentry_dsn_here"

# CDN Configuration
VITE_CDN_URL="https://cdn.smartcropadvisory.com"

# Security Settings
VITE_ENABLE_HTTPS="true"
VITE_CSRF_PROTECTION="true"

# Cache Settings
VITE_CACHE_TIMEOUT="600000"  # 10 minutes in milliseconds
VITE_API_RETRY_COUNT="3"
VITE_API_TIMEOUT="30000"     # 30 seconds

# Feature Flags
VITE_ENABLE_REAL_TIME="true"
VITE_ENABLE_OFFLINE_MODE="true"
VITE_ENABLE_PUSH_NOTIFICATIONS="true"
VITE_ENABLE_AI_FEATURES="true"

# Debug Settings (should be false in production)
VITE_DEBUG_MODE="false"
VITE_SHOW_DEV_TOOLS="false"