# Backend API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:5000
VITE_APP_NAME=Farmora
VITE_APP_VERSION=1.0.0

# Weather API Configuration
VITE_WEATHER_API_KEY=your_openweathermap_api_key
VITE_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# AI/Chat Service Configuration
VITE_AI_SERVICE_URL=http://localhost:5000/api/ai
VITE_CHAT_API_KEY=your_openai_api_key

# Video Consultation Configuration
VITE_SIGNALING_SERVER_URL=ws://localhost:3001
VITE_TURN_SERVER_URL=stun:stun.l.google.com:19302

# Firebase Configuration (for Push Notifications)
# Replace these with your actual Firebase project credentials
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id
VITE_FIREBASE_VAPID_KEY=your_vapid_key_for_push_notifications

# Map and Location Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_DEFAULT_LOCATION_LAT=28.6139
VITE_DEFAULT_LOCATION_LON=77.2090

# External APIs (Optional - Backend handles most of these)
VITE_WEATHER_API_KEY=your_weather_api_key_here
VITE_MARKET_API_KEY=your_market_api_key_here

# Application Settings
VITE_MAX_FILE_SIZE=10485760
VITE_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/jpg
VITE_REQUEST_TIMEOUT=30000
VITE_MAX_RETRY_ATTEMPTS=3

# Development Settings
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_DARK_MODE=true

# Security Settings
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=false
