# Smart Crop Advisory - Environment Variables
# Copy this file to .env and fill in your actual values

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:5000

# Weather API Configuration
VITE_WEATHER_API_KEY=your_openweathermap_api_key
VITE_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# AI/Chat Service Configuration
VITE_AI_SERVICE_URL=http://localhost:5000/api/ai
VITE_CHAT_API_KEY=your_openai_api_key

# Video Consultation Configuration
VITE_SIGNALING_SERVER_URL=ws://localhost:3001
VITE_TURN_SERVER_URL=turn:your-turn-server.com:3478
VITE_TURN_SERVER_USERNAME=your_turn_username
VITE_TURN_SERVER_PASSWORD=your_turn_password

# Firebase Configuration (for real notifications)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-ABCDEF123
VITE_FIREBASE_VAPID_KEY=your_vapid_key

# Database Configuration (if needed for direct connections)
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=smart_crop_db

# Third-party Services
VITE_MAPS_API_KEY=your_google_maps_api_key
VITE_SOIL_API_KEY=your_soil_data_api_key
VITE_MARKET_API_KEY=your_market_data_api_key

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=true

# Cross-platform Configuration
VITE_PLATFORM_TARGET=web
VITE_MOBILE_APP_ID=com.smartcrop.advisory
VITE_DESKTOP_APP_NAME=SmartCropAdvisory